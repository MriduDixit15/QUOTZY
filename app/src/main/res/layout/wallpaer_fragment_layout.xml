<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/wallpaper_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_white_rect"

        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/regular"
            android:textColor="@android:color/white"

            android:textSize="@dimen/font" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="@string/HD"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="@string/UHD"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rd_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:alpha="0.8"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp">

        <RadioButton
            android:id="@+id/rb_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/rd_btn_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"

            android:padding="5dp"
            android:text="@string/regular"
            android:textColor="@drawable/rd_btn_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <RadioButton
            android:id="@+id/rb_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/rd_btn_selector"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/HD"
            android:textColor="@drawable/rd_btn_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <RadioButton
            android:id="@+id/rb_uhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/rd_btn_selector"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/UHD"
            android:textColor="@drawable/rd_btn_text_color" />
    </RadioGroup>
</RelativeLayout>