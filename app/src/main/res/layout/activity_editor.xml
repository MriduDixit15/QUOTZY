<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hustler.quote.ui.activities.EditorActivity">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/textColor"
        android:clipToPadding="true"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/content_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/secod_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top"
        android:background="@android:color/white"
        android:elevation="@dimen/elevation4"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_anchor="@id/bottomsheet">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/texto_editor_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="@dimen/elevation4"
            android:src="@drawable/ic_font_sizes" />

        <ImageView
            android:id="@+id/texto_editor_font"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="@dimen/elevation8"
            android:src="@drawable/ic_font" />

        <ImageView
            android:id="@+id/texto_editor_color"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/ic_text_color" />

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cr_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="125dp"
        app:layout_anchor="@id/secod_detail">
        <LinearLayout
            android:id="@+id/main_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/elevation4"
            android:background="@color/colorPrimaryDark"
            android:elevation="@dimen/elevation4"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:elevation="@dimen/elevation4"
                android:padding="@dimen/elevation8"
                android:text="gshdgsdgshghsghgshsghsgshghdsghcbhdbchbdvcdsvcgvsdgcvgvdsgcvgdvsgcvgsdvgcvgsdvcgvsdgvcgsdvgcvgdvcgdvgcvsdgvcgdvsgcvdsgvcgdvgcvsgvdgvdgvsdgvgcdsvgcvdgsvcgdsvcgvdsgcvdsgvcgdsvcgdsvgh
            c"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/quote_layout"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:background="#f5f5f5"
                android:elevation="@dimen/elevation4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Quote_Body"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@drawable/rect_black_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textAlignment="center"

                    android:textColor="@color/textColor"
                    android:textIsSelectable="true"

                    android:textSize="@dimen/font3_5"
                    android:transitionName="@string/quotes_body_transistion"
                    tools:text="hdsjkdsfsdhfhdjhfsjhfjhjdsfjk
            shdjfhsjhfjkhsdfhjsdhjs" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_black_border"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quote_anim"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/elevation8"
                        android:layout_weight="1.3"
                        app:srcCompat="@drawable/ic_quote_animation" />

                    <TextView
                        android:id="@+id/tv_Quote_Author"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:gravity="top"
                        android:paddingTop="@dimen/elevation8"
                        android:textAlignment="center"

                        android:textColor="@color/colorAccent"

                        android:textSize="@dimen/font2"
                        tools:text="hdsjkdsfsdhfhdjhfsjhf" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/third_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:elevation="@dimen/elevation4"
        android:orientation="horizontal"
        app:layout_anchor="@id/cr_ll"
        app:layout_anchorGravity="bottom"

        >

        <SeekBar
            android:id="@+id/seekbar_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

        </SeekBar>

        <ImageView
            android:id="@+id/close_text_size"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_done_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/editor_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/ic_format_color_text_black_24dp" />

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="1dp"

            android:src="@drawable/ic_image_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
