<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.hustler.quote.ui.activities.EditorActivity">


    <!--<android.support.v4.widget.NestedScrollView-->
    <!--android:id="@+id/bottomsheet"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="80dp"-->
    <!--android:background="@color/textColor"-->
    <!--android:clipToPadding="true"-->
    <!--android:orientation="vertical"-->
    <!--android:visibility="gone"-->
    <!--app:layout_behavior="@string/bottom_sheet_behavior">-->


    <!--</android.support.v4.widget.NestedScrollView>-->

    <LinearLayout
        android:id="@+id/editor_font_module"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="@android:color/white"
        android:elevation="@dimen/elevation4"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:src="@drawable/ic_close_black_24dp"/>

        <ImageView
            android:id="@+id/Editor_text_module_Size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="@dimen/elevation4"
            android:visibility="invisible"
            android:src="@drawable/ic_font_sizes" />

        <ImageView
            android:id="@+id/Editor_text_module_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:padding="@dimen/elevation8"
            android:src="@drawable/ic_save_black_24dp" />

        <ImageView
            android:id="@+id/Editor_text_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="8dp"
            android:src="@drawable/ic_menu_share" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/editor_background_module"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top"

        android:elevation="@dimen/elevation4"
        android:orientation="horizontal"
        android:visibility="gone"
        >


        <ImageView
            android:id="@+id/Editor_background_module_colored_backgrounds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="@dimen/elevation4"
            android:src="@drawable/ic_colors_bg" />

        <ImageView
            android:id="@+id/Editor_background_module_gallery_backgrounds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="@dimen/elevation4"
            android:src="@drawable/ic_gallery_bg" />

        <ImageView
            android:id="@+id/Editor_background_module_blurred_backgrounds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="@dimen/elevation2"

            android:src="@drawable/ic_blur_on_black_24dp" />

        <ImageView
            android:id="@+id/Editor_background_module_picture_filter_changer"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="@dimen/elevation2"
            android:src="@drawable/ic_filters" />

    </LinearLayout>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/Editor_lead_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Editor_lead_screen_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_editor_navigaotor_level1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/font_style_changer_module"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/ic_format_color_text_black_24dp" />

                <ImageView
                    android:id="@+id/font_background_chnager_module"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="1dp"

                    android:src="@drawable/ic_image_black_24dp" />

                <ImageView
                    android:id="@+id/font_save_module"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="1dp"
                    android:src="@drawable/ic_save_black_24dp" />

                <ImageView
                    android:id="@+id/font_share_module"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="1dp"
                    android:src="@drawable/ic_share_accent_24dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:elevation="@dimen/elevation4"
                android:padding="@dimen/elevation8"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:visibility="gone"
                tools:text="gshdgsdgshgvcgvdsgcvdsgvcgdsvcgdsvghc" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/quote_layout"
                    android:layout_width="match_parent"
                    android:layout_height="440dp"
                    android:background="#f5f5f5"
                    android:elevation="@dimen/elevation4"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/empty_image_to_be_blurred"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:drawable/screen_background_dark_transparent" />

                    <TextView
                        android:id="@+id/tv_Quote_Body"
                        android:layout_width="match_parent"
                        android:layout_height="385dp"
                        android:layout_gravity="center"
                        android:layout_weight="5"
                        android:elevation="@dimen/elevation4"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textIsSelectable="true"

                        android:textSize="@dimen/font3_5"
                        android:transitionName="@string/quotes_body_transistion"
                        tools:text="hdsjkdsfsdhfhdjhfsjhfjhjdsfjk
            shdjfhsjhfjkhsdfhjsdhjs" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_Quote_Body"
                        android:background="@drawable/rect_black_border"
                        android:elevation="@dimen/elevation4"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/quote_anim"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/elevation8"
                            android:layout_weight="1.3"
                            app:srcCompat="@drawable/ic_quote_animation" />

                        <TextView
                            android:id="@+id/tv_Quote_Author"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="top"
                            android:paddingTop="@dimen/elevation8"
                            android:textAlignment="center"

                            android:textColor="@color/textColor"

                            android:textSize="@dimen/font2"
                            tools:text="hdsjkdsfsdhfhdjhfsjhf" />
                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fontsize_change_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"

            >


            <ImageView
                android:id="@+id/font_change_close_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_done_black_24dp"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <!--NEW INSTAGRAM LAYOUT-->
    <!--LEVEL 1 TextViews-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Editor_lead_screen">

        <LinearLayout
            android:id="@+id/level_1_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Text"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/background"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/level_2_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/close"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/done"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

        </LinearLayout>
        <!--LEVEL 2 RECYCLERVIEWS-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/content_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/level_1_bottom_layout" />

        <!--LEVEL 2 SLIDER-->

        <SeekBar
            android:id="@+id/fontChange_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/level_1_bottom_layout"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>
