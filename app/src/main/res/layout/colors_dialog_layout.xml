<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="16dp"
        android:elevation="4dp"
        android:text="@string/choose_color"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/_demo_color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="4dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/font3"
        android:textStyle="italic" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/colors_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"

        android:padding="4dp">

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/bt_color_shadow"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="@dimen/font"
        android:layout_weight="1"
        android:background="@drawable/rounded_rect"
        android:text="@string/apply_shadow"
        android:textColor="@color/colorAccent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/bt_color_close"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="@dimen/font"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/bt_color_choose"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="@dimen/font"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect"

            android:text="@string/choose"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>