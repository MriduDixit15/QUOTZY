<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:orientation="vertical"
    android:layout_margin="@dimen/elevation4"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect_black_border">
        <TextView
            android:id="@+id/main_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:text="Something"
            android:textSize="@dimen/font2"
            android:padding="@dimen/elevation8"
            android:layout_gravity="center"
            android:gravity="center"

            android:elevation="@dimen/elevation8"
            />
        <TextView
            android:id="@+id/quote_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:text="Something"
            android:textSize="@dimen/font2"
            android:padding="@dimen/elevation4"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="@dimen/elevation4"

            />
        <TextView
            android:id="@+id/quote_genre_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:text="Something"
            android:textSize="@dimen/font"
            android:padding="@dimen/elevation4"
            android:layout_gravity="start"
            android:gravity="start"
            android:background="@android:drawable/screen_background_light_transparent"

            android:elevation="@dimen/elevation4"
            android:layout_margin="@dimen/elevation4"/>
    </LinearLayout>



</LinearLayout>