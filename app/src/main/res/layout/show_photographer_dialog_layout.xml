<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/toolbar"
        android:background="@drawable/gradient1">


        <ImageView
            android:id="@+id/user_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@drawable/gradient1" />

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_rect"
            android:elevation="4dp" />

        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/user_image">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font3"
                tools:text="Sayimanoj" />

            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:maxLines="2"
                android:padding="4dp"
                android:textColor="@android:color/white"

                android:textSize="@dimen/font"
                tools:text="Bio" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font"

                tools:text="Location" />

            <TextView
                android:id="@+id/twitter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:padding="4dp"
                android:textColor="@android:color/white"

                android:textSize="@dimen/font"
                tools:text="Twitter" />

            <TextView
                android:id="@+id/portfolio_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/twitter_name"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font"

                tools:text="PortfolioUrl" />


        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/visit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@drawable/rounded_rect"
        android:elevation="4dp"
        android:text="@string/visit_profile"
        android:textColor="@android:color/holo_blue_bright"
        android:textAllCaps="false"
        android:layout_margin="4dp"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visit_profile"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/close"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_close_white"
        app:fabSize="normal" />
</RelativeLayout>